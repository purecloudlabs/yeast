{
	"compilerOptions": {
		"declaration": true,
		"declarationDir": "dist",
		"module": "esnext",
		"target": "es6",
		"lib": ["es6", "dom", "es2016", "es2017"],
		"sourceMap": true,
		"jsx": "react",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"allowJs": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "app", "src/**/*.stories.tsx", "src/__tests__/**/*"]
}
