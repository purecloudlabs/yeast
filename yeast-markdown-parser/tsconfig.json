{
  "compilerOptions": {
    "module": "esnext",
    "target": "es6",
    "outDir": "./dist",
    "baseUrl": "./src",
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "dist",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "declarationMap": true,
    "inlineSourceMap": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules", "./dist/**/*"]
}
